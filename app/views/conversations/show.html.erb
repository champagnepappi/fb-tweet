<div class="chatboxhead">
  <div class="chatboxtitle">
   <i class="fa fa-comments"></i>
   <h1> <%= @reciever.f_name %></h1>
  </div>
  <div class="chatboxoptions">
      <p> <%= link_to "<i class='fa fa-times'> ".html_safe, '#', class: "closeChat", "data-cid" => @conversation.id %></p>
      <p> <%= link_to "<i class='fa fa-times'></>".html_safe, "#", class: "closeChat" , "data-cid" => @conversation.id%></p>

      </div>
      <br clear="all">
      <div class="chatboxcontent">
      <% if @messages.any? %> 
          <%= render @messages %>
          <% end %>
      </div>
      <div class="chatboxinput">
          <%= form_for([@conversation, @message], :remote => true, :html => {id: "conversation_form#{@conversation.id}"}) do |f| %>
              <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @conversation.id%>
              <% end %>
          </div>

</div>
