<li>
   <span class="content">
   <%= video.content %>
   </span>
   <br>
   <span class="video">
       <% if video.video?%>
       <%= video_tag video.video_url.to_s , :controls => true, width: '80%', height: '15%' %>
       <% end %>
   </span> <br>
   <span class="comments">
         <%= link_to fa_icon('comments'), video_path(id: video.id) %> 
   </span>
</li>

<script type="text/javascript">
$('#video_video').bind('change', function) {
    size_in_megabytes = this.files[0].size/1024/1024;
    if(size_in_megabytes > 10){
        alert('Maximum file size is 10MB. Choose smaller size')
    }
}
</script>
