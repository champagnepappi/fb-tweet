<li>
   <span class="content">
   <%= video.content %>
   </span>
   <span class="video">
       <% if video.video?%>
       <%= video_tag video.video_url.to_s , :controls => true %>
       <% end %>
   </span>
</li>

<script type="text/javascript">
$('#video_video').bind('change', function) {
    size_in_megabytes = this.files[0].size/1024/1024;
    if(size_in_megabytes > 10){
        alert('Maximum file size is 10MB. Choose smaller size')
    }
}
</script>
