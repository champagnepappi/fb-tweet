<% provide(:title, "video")%>
<div class="row">
    <div class="medium-12">
        <div class="medium-8 columns">
            <p><span class="content"><%= @video.content %></span></p>
            <span class="video">
                <% if @video.video?%>
                    <%= video_tag @video.video_url.to_s , :controls => true, width: '80%', height: '15%' %>
                <% end %>
            </span>
        </div>
        <div class="medium-4 columns">
            <h4><strong> Comments</strong></h4>
            <%= form_for(@video.comments.build) do |f|%>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :video_id %>
                <%= f.text_area :content, placeholder: "Add comment ..." %>
                <%= f.submit "comment", class: "button" %>
            <% end %>

        <% if @comments.any?%>
            <ol class="comments">
                <%= render @comments %>
            </ol>
            <% end %>
        </div>
    </div>
</div>
