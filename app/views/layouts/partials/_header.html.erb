<div class="top-bar" sdata-sticky id="widemenu" data-options="marginTop:0;" style="width:100%" data-top-anchor="1">
    <div class="top-bar-left">
        <ul class="menu">
            <li> <%= link_to fa_icon('home', text: "Home", class: 'home'), root_path %></li>
        </ul>
    </div>
    <div class="top-bar-right">
        <ul class="menu">
            <% unless logged_in? %>
                <li> <%= link_to fa_icon('sign-in', text: "Login"), login_path %></li>
            <% else %>
                <li> <%= link_to fa_icon('user', text: "Profile"), user_path %></li>
                <li> <%= link_to fa_icon('sign-out', text: "Logout"), logout_path, method: :delete %></li>
            <% end %>

        </ul>
    </div>

</div>
