<li style="list-style: none">
    <%= link_to gravatar_for(comment.user, size: 50), comment.user if comment.user  %>
    <span class="user"> <%= link_to comment.user.f_name, comment.user if comment.user %></span>
    <span class="content"> <%= comment.content %></span>
    <span class="timestamp">
        <% if comment.created_at%>
            Posted <%= time_ago_in_words(comment.created_at)  %> ago.
        <% end %>
    </span>
</li>
